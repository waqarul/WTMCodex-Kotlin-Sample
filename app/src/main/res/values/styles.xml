<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- BaseListBO application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:actionButtonStyle">@style/MyActionButtonStyle</item>

        <item name="colorControlNormal">@color/re_color</item>
        <item name="colorControlActivated">@color/re_color</item>
        <item name="colorControlHighlight">@color/re_color</item>


    </style>

    <style name="MyActionButtonStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:minWidth">20dp</item>
        <item name="android:padding">8dp</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="AppTheme.Widget.TextView" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">@string/font_family_regular</item>
    </style>

    <style name="TextAppearance.Headline" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="fontPath">@string/font_family_medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="fontPath">@string/font_family_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Title.Bold" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="fontPath">@string/font_family_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Caption" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorSubTextPrimary</item>
        <item name="fontPath">@string/font_family_regular</item>
        <item name="android:textSize">12sp</item>
    </style>


</resources>
